<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_admin_editService">


    <EditText
        android:id="@+id/enter_serviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Enter Service Name" />

    <Spinner
        android:id="@+id/select_category"
        android:entries="@array/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"/>

    <Spinner
        android:id="@+id/select_subcategory"
        android:entries="@array/subCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"/>

    <Spinner
        android:id="@+id/select_rolePerforming"
        android:entries="@array/rolePerforming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center"
        android:gravity="center">
        <Button
            android:id="@+id/edit_service_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT SERVICE"/>
        <Button
            android:id="@+id/btn_adminService_return"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_returnToPrevious" />
    </LinearLayout>
</FrameLayout>